<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
    <!-- Form of Tax Invoice -->  
    <record model="ir.ui.view" id="tax_invoice_form_view">
            <field name="name">taxinvoice.form</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
                <form string="Forma podatkovoi nakladnoi">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label string="Podatkova nakladna" attrs="{'invisible': [('doc_type', '&lt;&gt;', 'pn')]}"/>
                                <label string="Rozrakhunok koryguvannya do PN" attrs="{'invisible': [('doc_type', '&lt;&gt;', 'rk')]}"/>
                                <label string="Mytna deklaratsiya" attrs="{'invisible': [('doc_type', '&lt;&gt;', 'vmd')]}"/>
                                <label string="Transportnyj kvytok" attrs="{'invisible': [('doc_type', '&lt;&gt;', 'tk')]}"/>
                                <label string="Buhgalterska dovidka" attrs="{'invisible': [('doc_type', '&lt;&gt;', 'bo')]}"/>
                            </h1>
                            <label for="date_vyp" class="oe_edit_only"/>
                            <h3>
                                Vid <field name="date_vyp" class="oe_inline"/> nomer <field name="number" class="oe_inline"/> / <field name="number1" class="oe_inline"/> / <field name="number2" class="oe_inline"/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="company_seller"/>
                                <field name="ipn_seller"/>
                                <field name="adr_seller"/>
                                <field name="tel_seller"/>
                                <newline />
                                <field name="contract_type"/>
                                <field name="payment_meth"/>
                            </group>
                            <group>
                                <field name="company_buyer"/>
                                <field name="ipn_buyer"/>
                                <field name="adr_buyer"/>
                                <field name="tel_buyer"/>
                                <field name="contract_numb"/>
                                <field name="contract_date"/>
                            </group>  
                        </group>
                        <notebook>
                            <page string="Nomenklatura">
                            </page>

                            <page string="Insha informatsiya">
                                <group>
                                    <group>
                                        <field name="h01"/>
                                        <field name="category"/>
                                        <field name="date_reg"/>
                                    </group>
                                    <group>
                                        <field name="horig1"/>
                                        <field name="htypr"/>
                                        <field name="doc_type"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
    </record>
    
    <!-- List of Customer Tax Invoices -->
    <record model="ir.actions.act_window" id="customer_tax_invoice_list_action">
            <field name="name">Vydani podatkovi nakladni</field>
            <field name="res_model">account.taxinvoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_category':'out_tax_invoice', 'category':'out_tax_invoice', 'search_default_category':'out_tax_invoice'}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Stvorit pershu vyhidnu podatkovu nakladnu.
                </p>
            </field>
    </record>
    
    <!-- List of Supplier Tax Invoices -->
    <record model="ir.actions.act_window" id="supplier_tax_invoice_list_action">
            <field name="name">Otrymani podatkovi nakladni</field>
            <field name="res_model">account.taxinvoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_category':'in_tax_invoice', 'category':'in_tax_invoice', 'search_default_category':'in_tax_invoice'}</field>
            <field name="filter" eval="True"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Stvorit pershu vhidnu podatkovu nakladnu.
                </p>
            </field>
    </record>

    <!-- Payment method list -->
    <record model="ir.ui.view" id="ti_paymeth_tree_view">
        <field name="name">tipaymeth.tree</field>
        <field name="model">account.taxinvoice.paymeth</field>
        <field name="arch" type="xml">
            <tree string="Sposoby oplaty">
                <field name="name"/>
            </tree>
        </field>
    </record>



    <!-- Menu entry Customer Tax Invoices -->
    <menuitem id="menu_customer_vat_invoices"
            name="Vydani PN"
            parent="account.menu_finance_receivables"
            action="customer_tax_invoice_list_action"
            sequence="51"/>

    <!-- Menu entry Supplier Tax Invoices -->
    <menuitem id="menu_supplier_vat_invoices"
            name="Otrymani PN"
            parent="account.menu_finance_payables"
            action="supplier_tax_invoice_list_action"
            sequence="51"/>

    <!--Add search by Category  -->
    <record model="ir.ui.view" id="tax_invoice_view_filter">
            <field name="name">taxinvoice.list.select</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
            <search string="Poshuk za kategorieyu">
                <field name="category"/>
            </search>
            </field>
    </record>

    </data>
</openerp> 

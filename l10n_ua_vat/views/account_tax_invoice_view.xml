<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!-- Form of Tax Invoice -->
        <record id="tax_invoice_form_view" model="ir.ui.view">
            <field name="name">taxinvoice.form</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
                <form string="Forma podatkovoi nakladnoi">
                    <header></header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'pn')]}" string="Podatkova nakladna"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'rk')]}" string="Rozrakhunok koryguvannya do PN"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'vmd')]}" string="Mytna deklaratsiya"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'tk')]}" string="Transportnyj kvytok"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'bo')]}" string="Buhgalterska dovidka"/>
                            </h1>
                            <label class="oe_edit_only" for="date_vyp"/>
                            <h3>
                                Vid
                                <field class="oe_inline" name="date_vyp"/>
                                nomer
                                <field class="oe_inline" name="number"/>
                                /
                                <field class="oe_inline" name="number1"/>
                                /
                                <field class="oe_inline" name="number2"/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="company_seller"/>
                                <field name="ipn_seller"/>
                                <field name="adr_seller"/>
                                <field name="tel_seller"/>
                                <newline/>
                                <field name="contract_type"/>
                                <field name="payment_meth"/>
                            </group>
                            <group>
                                <field name="company_buyer"/>
                                <field name="ipn_buyer"/>
                                <field name="adr_buyer"/>
                                <field name="tel_buyer"/>
                                <field name="contract_numb"/>
                                <field name="contract_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nomenklatura">

                                <field name="taxinvoice_line" widget="one2many_list">
                                    <tree editable="bottom" string=" Tax Invoice Lines">
                                        <field name="sequence" widget="handle"/>
                                        <field name="date_vynyk"/>
                                        <field name="product_id"/>
                                        <field name="ukt_zed"/>
                                        <field name="uom_id"/>
                                        <field name="uom_code"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="discount"
                                            groups="sale.group_discount_per_so_line"/>
                                        <field name="taxinvoice_line_tax_id"
                                            widget="many2many_tags"/>
                                        <field name="price_subtotal"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Insha informatsiya">
                                <group>
                                    <group>
                                        <field name="h01"/>
                                        <field name="category"/>
                                        <field name="date_reg"/>
                                    </group>
                                    <group>
                                        <field name="horig1"/>
                                        <field name="htypr"/>
                                        <field name="doc_type"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

<!-- Tree view of tax invoices -->
        <record id="tax_invoice_tree_view" model="ir.ui.view">
            <field name="name">taxinvoice.tree</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
                <tree string="Taxinvoice List">
                    <field name="date_vyp"/>
                    <field name="number"/>
                    <field name="company_seller"/>
                    <field name="ipn_seller"/>
                    <field name="company_buyer"/>
                    <field name="ipn_buyer"/>
                </tree>
            </field>
        </record>

<!-- List of Customer Tax Invoices -->
        <record id="customer_tax_invoice_list_action" model="ir.actions.act_window">
            <field name="name">Vydani podatkovi nakladni</field>
            <field name="res_model">account.taxinvoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_category':'out_tax_invoice', 'category':'out_tax_invoice', 'search_default_category':'out_tax_invoice'}</field>
            <field eval="True" name="filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Stvorit pershu vyhidnu podatkovu nakladnu.
                </p>
            </field>
        </record>

<!-- List of Supplier Tax Invoices -->
        <record id="supplier_tax_invoice_list_action" model="ir.actions.act_window">
            <field name="name">Otrymani podatkovi nakladni</field>
            <field name="res_model">account.taxinvoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_category':'in_tax_invoice', 'category':'in_tax_invoice', 'search_default_category':'in_tax_invoice'}</field>
            <field eval="True" name="filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Stvorit pershu vhidnu podatkovu nakladnu.
                </p>
            </field>
        </record>

<!-- Payment method list -->
        <record id="ti_paymeth_tree_view" model="ir.ui.view">
            <field name="name">tipaymeth.tree</field>
            <field name="model">account.taxinvoice.paymeth</field>
            <field name="arch" type="xml">
                <tree string="Sposoby oplaty">
                    <field name="name"/>
                </tree>
            </field>
        </record>

<!-- Menu entry Customer Tax Invoices -->
        <menuitem action="customer_tax_invoice_list_action" id="menu_customer_vat_invoices" name="Vydani PN" parent="account.menu_finance_receivables" sequence="51"/>

<!-- Menu entry Supplier Tax Invoices -->
        <menuitem action="supplier_tax_invoice_list_action" id="menu_supplier_vat_invoices" name="Otrymani PN" parent="account.menu_finance_payables" sequence="51"/>

<!--Add search by Category  -->
        <record id="tax_invoice_view_filter" model="ir.ui.view">
            <field name="name">taxinvoice.list.select</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
                <search string="Poshuk za kategorieyu">
                    <field name="category"/>
                </search>
            </field>
        </record>

    </data>
</openerp>

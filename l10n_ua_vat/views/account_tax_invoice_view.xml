<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<!-- Form of Tax Invoice -->
        <record id="tax_invoice_form_view" model="ir.ui.view">
            <field name="name">taxinvoice.form</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
                <form string="Форма податкової накладної">
                    <header>
                        <field name="state" widget="statusbar"
                            statusbar_visible="draft,open,paid"
                            statusbar_colors='{"proforma":"blue","proforma2":"blue"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'pn')]}"
                                    string="Податкова накладна"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'rk')]}"
                                    string="Розрахунок коригування до ПН"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'vmd')]}"
                                    string="Митна декларація"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'tk')]}"
                                    string="Транспортний квиток"/>
                                <label attrs="{'invisible': [('doc_type', '&lt;&gt;', 'bo')]}"
                                    string="Бухгалтерська довідка"/>
                            </h1>
                            <label class="oe_edit_only" for="date_vyp"/>
                            <h3>
                                Від
                                <field class="oe_inline" name="date_vyp"/>
                                номер
                                <field class="oe_inline" name="number"/>
                                /
                                <field class="oe_inline" name="number1"/>
                                /
                                <field class="oe_inline" name="number2"/>
                            </h3>
                            <field name="doc_type" invisible="1"/>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"
                                    attrs="{'invisible': [('category', '&lt;&gt;', 'out_tax_invoice')]}"
                                    string="Покупець"/>
                                <field name="partner_id"
                                    attrs="{'invisible': [('category', '&lt;&gt;', 'in_tax_invoice')]}"
                                    string="Продавець"/>
                                <field name="ipn_partner"
                                    attrs="{'invisible': [('category', '&lt;&gt;', 'out_tax_invoice')]}"
                                    string="ІПН покупця"/>
                                <field name="ipn_partner"
                                        attrs="{'invisible': [('category', '&lt;&gt;', 'in_tax_invoice')]}"
                                        string="ІПН продавця"/>
                                <field name="adr_partner"
                                    attrs="{'invisible': [('category', '&lt;&gt;', 'out_tax_invoice')]}"
                                    string="Адреса покупця"/>
                                <field name="adr_partner"
                                        attrs="{'invisible': [('category', '&lt;&gt;', 'in_tax_invoice')]}"
                                        string="Адреса продавця"/>
                                <field name="tel_partner"
                                    attrs="{'invisible': [('category', '&lt;&gt;', 'out_tax_invoice')]}"
                                    string="Телефон покупця"/>
                                <field name="tel_partner"
                                        attrs="{'invisible': [('category', '&lt;&gt;', 'in_tax_invoice')]}"
                                        string="Телефон продавця"/>
                                <field name="category" invisible="1"/>
                            </group>
                            <group>
                                <field name="contract_numb"/>
                                <field name="contract_date"/>
                                <field name="contract_type"/>
                                <field name="payment_meth"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Номенклатура">

                                <field name="taxinvoice_line_ids" widget="one2many_list">
                                    <tree editable="bottom" string="Рядки ПН">
                                        <field name="sequence" widget="handle"/>
                                        <field name="date_vynyk"/>
                                        <field name="product_id"/>
                                        <field name="ukt_zed"/>
                                        <field name="uom_id"/>
                                        <field name="uom_code"/>
                                        <field name="quantity"/>
                                        <field name="price_unit"/>
                                        <field name="discount"
                                            groups="sale.group_discount_per_so_line"/>
                                        <field name="price_subtotal"/>
                                        <field name="taxinvoice_line_tax_id"
                                            context="{'category':parent.category}"
                                            options="{'no_create': True}"/>
                                        <!-- <field name="account_id"
                                            groups="account.group_account_manager"
                                            domain="[('company_id', '=', parent.company_id)]"/> -->
                                        <field name="tax_amount"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <div class="oe_inline">
                                            <field name="tax_line_ids">
                                                <tree editable="bottom" string="Податки">
                                                    <field name="name"/>
                                                    <field name="tax_id" invisible="1"/>
                                                    <field name="account_analytic_id" invisible="1"/>
                                                    <field name="sequence" invisible="1"/>
                                                    <field name="manual" invisible="1"/>
                                                    <field name="account_id"
                                                        groups="account.group_account_invoice"/>
                                                    <field name="account_id"
                                                        domain="[('company_id', '=', parent.company_id)]"
                                                        groups="analytic.group_account_manager"/>
                                                    <field name="amount"/>
                                                    <field name="currency_id" invisible="1"/>
                                                </tree>
                                            </field>
                                        </div>
                                    </group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="amount_untaxed"/>
                                        <field name="amount_tax"/>
                                        <field name="amount_total"
                                            class="oe_subtotal_footer_separator"/>
                                    </group>
                            </group>
                            </page>

                            <page string="Додатково">
                                <group>
                                    <group>
                                        <field name="h01"/>
                                        <field name="category"/>
                                        <field name="date_reg"/>
                                        <field name="currency_id"/>
                                        <field name="company_id"/>
                                        <field name="account_id"
                                            groups="account.group_account_manager"
                                            domain="[('company_id', '=', company_id)]"/>
                                    </group>
                                    <group>
                                        <field name="horig1"/>
                                        <field name="htypr"/>
                                        <field name="doc_type"/>
                                        <field name="journal_id"
                                            groups="account.group_account_user"
                                            options="{'no_create': True}"/>
                                        <field name="move_id"
                                            groups="account.group_account_manager"
                                            attrs="{'invisible': [('move_id', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

<!-- Tree view of tax invoices -->
        <record id="tax_invoice_tree_view" model="ir.ui.view">
            <field name="name">taxinvoice.tree</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
                <tree string="Список ПН">
                    <field name="date_vyp"/>
                    <field name="number"/>
                    <field name="partner_id"/>
                    <field name="ipn_partner"/>
                    <field name="company_id"/>
                    <field name="state"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="journal_id" invisible="1"/>
                </tree>
            </field>
        </record>

<!-- List of Customer Tax Invoices -->
        <record id="customer_tax_invoice_list_action" model="ir.actions.act_window">
            <field name="name">Видані податкові накладні</field>
            <field name="res_model">account.taxinvoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_category':'out_tax_invoice', 'category':'out_tax_invoice', 'search_default_category':'out_tax_invoice'}</field>
            <field eval="True" name="filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Створіть першу видану податкову накладну.
                </p>
            </field>
        </record>

<!-- List of Supplier Tax Invoices -->
        <record id="supplier_tax_invoice_list_action" model="ir.actions.act_window">
            <field name="name">Отримані податкові накладні</field>
            <field name="res_model">account.taxinvoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'default_category':'in_tax_invoice', 'category':'in_tax_invoice', 'search_default_category':'in_tax_invoice'}</field>
            <field eval="True" name="filter"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Створіть першу отриману податкову накладну.
                </p>
            </field>
        </record>

<!-- Payment method list -->
        <record id="ti_paymeth_tree_view" model="ir.ui.view">
            <field name="name">tipaymeth.tree</field>
            <field name="model">account.taxinvoice.paymeth</field>
            <field name="arch" type="xml">
                <tree string="Спосіб оплати">
                    <field name="name"/>
                </tree>
            </field>
        </record>

<!-- Menu entry Customer Tax Invoices -->
        <menuitem action="customer_tax_invoice_list_action" id="menu_customer_vat_invoices" name="Видані ПН" parent="account.menu_finance_receivables" sequence="51"/>

<!-- Menu entry Supplier Tax Invoices -->
        <menuitem action="supplier_tax_invoice_list_action" id="menu_supplier_vat_invoices" name="Отримані ПН" parent="account.menu_finance_payables" sequence="51"/>

<!--Add search by Category  -->
        <record id="tax_invoice_view_filter" model="ir.ui.view">
            <field name="name">taxinvoice.list.select</field>
            <field name="model">account.taxinvoice</field>
            <field name="arch" type="xml">
                <search string="Пошук за категорією">
                    <field name="category"/>
                </search>
            </field>
        </record>

    </data>
</openerp>

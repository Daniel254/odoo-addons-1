<openerp>
    <data>

        <record id="account_taxinvoice_export_view" model="ir.ui.view">
            <field name="name">account.taxinvoice.export.form</field>
            <field name="model">account.taxinvoice.export</field>
            <field name="arch" type="xml">
                <form string="Export Tax Invoices">
                    <p class="oe_grey">
                        Once draft invoices are confirmed, you will not be able
                        to modify them. The invoices will receive a unique
                        number and journal items will be created in your chart
                        of accounts.
                    </p>
                    <footer>
                        <button string="Export Tax Invoices" name="taxinvoice_export" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_account_tax_invoice_export"
            multi="True"
            key2="client_action_multi" name="Export Tax Invoices"
            res_model="account.taxinvoice.export" src_model="account.taxinvoice"
            view_mode="form" target="new" view_type="form" />

    </data>
</openerp>
 
